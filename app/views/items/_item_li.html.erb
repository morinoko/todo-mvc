<%= li_for_item(item) do %>
  <div class="view">
    <%= form_for([item.list, item]) do |f| %>
      <%= f.check_box :status, class: 'toggle', checked: item.complete? %>
      <%= f.label item.name %>
    <% end %>
    
    <%= button_to "x", list_item_path(item.list, item), method: :delete, class: "destroy" %>
  </div>
<% end %>